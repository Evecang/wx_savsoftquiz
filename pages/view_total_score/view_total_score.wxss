/* pages/view_total_score/view_total_score.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
} 

.titile{
  width: 100%;
  height: 4%;
  margin: 0;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
}

.row{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}

.perInput{
  float: left;
  /* min-width: 250rpx; */
  height: 58rpx;
  line-height: 58rpx;
  border: #aaa 1rpx solid;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  padding-left: 20rpx;
}


button::after {
  border: none;
}
.perBtn{
  float:left;
  width: 30s0rpx;
  height: 63rpx;
  line-height: 63rpx;
  font-size: 30rpx;
  border-radius: 0;
  border: #aaa 1rpx solid;
  border-left: none;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.scrollClass{
  display: flex;
  width: 100%;
  white-space: nowrap;
  /* height: 100%; */
  background-color: white;
}

.table{
  width: 100%;
  display: inline-flex;
  flex-direction: column;
  border: 1rpx solid rgba(218, 217, 217, 1);
  border-bottom: 0;  
}

.tr{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  border-bottom: 1rpx solid rgba(218, 217, 217, 1);
}

.th{
  width: 20%;
  height: 100rpx;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  font-size: 31rpx;
  font-weight: bold;
  overflow: scroll;
  border-left: 1rpx solid rgba(218, 217, 217, 1);
  background-color: rgba(241, 252, 255, 1);
}

.td{
  width: 20%;
  height: 70rpx;
  margin: 0;
  padding: 0;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  font-size: 31rpx;
  overflow: scroll;
}

.no_data{
  width: 100%;
  height: 70rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(218, 217, 217, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}