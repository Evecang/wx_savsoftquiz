/**index.wxss**/
.container{
  position:relative;
  height: 100%;
  width:100%;
  /* display: flex;
  flex-direction: column;
  align-items:center;
  justify-content:center; */
  padding:10rpx 0;
  z-index:1;
}

.container::after{
  content:'';
  position:absolute;
  top:0;
  left:0;
  height:100%;
  width:100%;
  background: inherit;
  filter:blur(4px);
  z-index:2;
}

.drag{
  position: absolute;
  top:0;
  left:0;
  height:100%;
  width:100%;
  z-index:11;
  display: flex;
  flex-direction:column;
  align-items:center;
  justify-content: flex-start;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-around;
  margin-top: 40rpx;
}

.userinfo-avatar {
  width: 220rpx;
  height: 220rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  display: none;
}

.login_web{
  display: flex;
  flex-direction:column;
  align-items: center;
  justify-content: space-around;
  min-width:550rpx;
  width:85%;
  /* height: 300rpx; */
  margin:35rpx 0 30rpx 0;
  padding:40rpx;
  border-top:3rpx solid rgba(110, 103, 103, 0.329);
  border-bottom:3rpx solid rgba(110, 103, 103, 0.329);
  box-shadow:0 3rpx 2rpx rgba(110, 103, 103, 0.329);
  background-color:transparent;
  background: -webkit-linear-gradient(60deg,rgba(245, 255, 250, 0.849) 25%,transparent);
  overflow: hidden;
}

.userDetail label{
 margin:30rpx 0 30rpx 0;
 height: 80rpx;
}

.login_web .span{
 width:120rpx;
 /* width:20%; */
 text-align: center;
 float:left;
 height:80rpx;
 line-height:80rpx;
  border-bottom: 1rpx solid rgba(110, 103, 103, 0.329);
 padding: 0 10rpx;
 position: relative;
}

.login_web .input{
  background-color:transparent;
  min-width: 380rpx;
  width:60%;
  float:left;
  height:80rpx;
  line-height:80rpx;
  border-bottom: 1rpx solid rgba(110, 103, 103, 0.329);
  padding: 0 10rpx;
  white-space: nowrap
}

.btn-area{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top:30rpx 
}

.btn-area button{
  margin:40rpx 40rpx;
  border:none;
  width:160rpx;
  height:80rpx;
  line-height: 80rpx
}

.btn-area button::after{
  border:none;
}

.btn-area button:nth-child(1){
  background:-webkit-linear-gradient(60deg,rgb(16, 141, 64) 25%,rgb(34, 252, 14));
}

.btn-area button:nth-child(2){
  background: -webkit-linear-gradient(60deg,rgba(229, 231, 230, 0.3) 25%,rgba(250, 250, 250, 0.3));
}

.editTitle{
  /* margin: 10rpx 0; */
}

.userDetail{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 650rpx;
  /* height: 700rpx; */
  margin-top: 10rpx;
  padding:20rpx 0;
  border: 1rpx solid #aaa;
  border-radius:20rpx;
}

.userDetail label{
 margin:10rpx 0;
 height: 80rpx;
}

.userDetail span{
 width:170rpx;
 text-align: center;
 float:left;
 height:60rpx;
 line-height:60rpx;
 font-size: 30rpx;
 border: #aaa 1rpx solid;
 border-right: none;
 border-top-left-radius: 15rpx;
 border-bottom-left-radius: 15rpx;
 padding: 0 10rpx;
 position: relative;
}


.userDetail span::after{
  display: inline-block;
  width: 10rpx;
  height: 60rpx;
  color:#aaa;
  content: '|';
  border:none;
  /* border-right: #aaa 1rpx solid; */
  position: absolute;
  top: 2rpx;
  left: 170rpx;
}

.userDetail input{
  min-width: 380rpx;
  float:left;
  height:60rpx;
  line-height:60rpx;
  font-size: 30rpx;
  border:#aaa 1rpx solid;
  border-left: none;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  box-shadow: 5rpx 5rpx 6rpx rgb(248, 242, 242);
  padding: 0 10rpx;
}

.editBtn{
  width: 450rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin:10rpx 0;
  background:-webkit-linear-gradient(60deg,rgb(16, 141, 64) 25%,rgb(34, 252, 14));
}

.editBtn::after{
  border:none;
}