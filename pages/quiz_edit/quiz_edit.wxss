/* pages/quiz_edit/quiz_edit.wxss */
@import '../../icons/bg.wxss';

.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  overflow: scroll;
}

.title{
  font-size: 60rpx;
  align-self: flex-start;
  border-bottom: 1rpx solid #e8e8e8;
}

.edit_form{
  width: 100%;
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  padding: 10rpx;
  margin-top: 20rpx;
}

.form_group{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

/* .form_row text{
  width: 40%
} */

.Input{
  display: inline;
  border-bottom: 1rpx solid #aaa;
  height: 80rpx;
  text-align: center;
}

.btnBox{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.btnBox button{
  font-size: 40rpx;
  color: #fff;
}
.btnBox button:nth-child(1){
  background-color: #337ab7;
}
.btnBox button:nth-child(2){
  background-color: #5cb85c;
}