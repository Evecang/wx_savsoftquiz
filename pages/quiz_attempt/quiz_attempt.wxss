/* pages/quiz_attempt/quiz_attempt.wxss */
.container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 20% 5% 15% 5%;
  background-image: linear-gradient(-20deg, #e9defa 0%, #fbfcdb 100%);
}

.header{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  width: 100%;
  height: 11%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-image: linear-gradient(to top, #f3e7e9 0%, #e3eeff 99%, #e3eeff 100%);
}

.title{
  font-size: 16px;
  font-weight: 900;
}
.timer{
  /* background-color: #000; */
}

.question_form{
  width: 100%;
  height: 100%;
}

.show_question{
  display: block;
  width: 100%;
  height: 100%;
  margin-bottom: 30rpx;
}
.hidden_question{
  display: none;
}

.question_container{
  width: 100%;
  height: 37%;
  overflow: scroll;
  margin-bottom: 8%;
}
.option_container{
  width: 100%;
  height: 55%;
  overflow: scroll;
}

.op{
  display: grid;
  grid-template-columns: 10% 90%;
  margin-bottom: 5rpx;
}

.shortInput{
  border: 1rpx solid #000;
  width: 99%;
}

.longInput{
  border: 1rpx solid #000;
  width: 99%;
  /* height: 90%; */
}

.picker{
  display: inline;
  border: 1rpx solid #000;
  position: relative;
}
